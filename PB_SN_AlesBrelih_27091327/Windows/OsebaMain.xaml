<Window x:Class="PB_SN_AlesBrelih_27091327.Windows.OsebaMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OsebaMain" Height="500" Width="415.278"
        WindowStyle="None" AllowsTransparency="True"
        MouseDown="OsebaMain_OnMouseDown" ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <ResourceDictionary Source="../Resources/Dictionaries/MainLayout.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Column="0">
            <Label Name="LabelOsebaMain" Style="{DynamicResource LabelH1Style}" Content="PB-SN-Pregled Oseb"/>
            <WrapPanel FlowDirection="RightToLeft">
                <Button Name="BtnClose" Style="{DynamicResource WindowStateClose}" Click="BtnClose_OnClick"/>
                <Button Name="BtnMinimize" Style="{DynamicResource WindowStateMinimize}" Click="BtnMinimize_OnClick"/>
            </WrapPanel>
        </Grid>
        <Grid Background="Red" Row="1">

        </Grid>
        <Grid Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <GroupBox Header="Izbor">

                <Grid Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Name="LblOseba" Content="Oseba" Style="{DynamicResource LabelManageOsebaInfo}"/>
                    <ComboBox Grid.Column="1" Name="CBoxOsebe"></ComboBox>
                </Grid>
            </GroupBox>
            
            <GroupBox Grid.Row="1" Header="Osebni Podatki">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="0.2"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Name="LblIme" Content="Ime" Style="{DynamicResource LabelManageOsebaInfo}"/>
                    <Label Grid.Row="1" Name="LblPriimek" Content="Priimek" Style="{DynamicResource LabelManageOsebaInfo}"/>
                    <Label Grid.Row="2" Name="LblEmail" Content="Email" Style="{DynamicResource LabelManageOsebaInfo}"/>
                    <Label Grid.Row="3" Name="LblTelefon" Content="Telefon" Style="{DynamicResource LabelManageOsebaInfo}"/>
                    <Button Grid.Row="5" Name="LblUredi" Content="Uredi" Background="Gray"/>
                    
                    <Grid Grid.Row="4" Background="Red"/>
                    <Grid Grid.Row="4" Grid.Column="1" Background="Red"></Grid>
                    
                    <Label Grid.Row="0" Grid.Column="1" Name="LblImeVnos" Content="Neki"/>
                    <Label Grid.Row="1" Grid.Column="1" Name="LblPriimekVnos" Content="Neki"/>
                    <Label Grid.Row="2" Grid.Column="1" Name="LblEmailVnos" Content="Neki"/>
                    <Label Grid.Row="3" Grid.Column="1" Name="LblTelefonVnos" Content="Neki"/>
                    <Button Grid.Row="5" Grid.Column="1" Name="BtnIzbrisi" Content="Izbrisi" Background="Gray"/>
                </Grid>
            </GroupBox>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button Content="OK" Name="BtnOK"/>
            </Grid>
        </Grid>
        <StatusBar Grid.Row="4"></StatusBar>
    </Grid>
</Window>
